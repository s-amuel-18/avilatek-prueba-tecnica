{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    // "baseUrl": ".",
    // "paths": {
    //   "*": [
    //     "node_modules/*",
    //     "src/types/*"
    //   ]
    // },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}